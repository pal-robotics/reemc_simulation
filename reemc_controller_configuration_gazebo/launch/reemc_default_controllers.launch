<launch>
  <!-- Legs -->
  <rosparam command="load" file="$(find reemc_controller_configuration_gazebo)/config/reemc_lower_body_controllers.yaml" />

  <!-- Arms -->
  <rosparam command="load" file="$(find reemc_controller_configuration_gazebo)/config/reemc_arm_controllers.yaml" />

  <!-- Hands -->
  <rosparam command="load" file="$(find reemc_controller_configuration_gazebo)/config/reemc_hand_controllers.yaml" />

  <!-- Head -->
  <rosparam command="load" file="$(find reemc_controller_configuration_gazebo)/config/reemc_head_controllers.yaml" />

  <!-- Controllers that come up started -->
  <node name="default_controllers_spawner"
        pkg="pr2_controller_manager" type="spawner" output="screen"
        args="--wait-for=calibrated lower_body_controller right_arm_torso_controller left_arm_controller head_traj_controller right_hand_controller left_hand_controller" />

  <!-- Point head action -->
  <include file="$(find reemc_controller_configuration_gazebo)/launch/point_head_action.launch" />
</launch>
